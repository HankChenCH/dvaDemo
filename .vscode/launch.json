{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "sourceMaps": true, //sourcemap打开
                "program": "${workspaceRoot}/src/index.js"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Launch via NPM",
                "runtimeExecutable": "npm",
                "runtimeArgs": [
                    "run",
                    "dev"
                ],
                "port": 5858
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${file}"
            }
        ]
    }